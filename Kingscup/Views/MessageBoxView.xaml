<Window
   x:Class="Kingscup.Views.MessageBoxView"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:local="clr-namespace:Kingscup.Views"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
   Width="300"
   Height="300"
   ResizeMode="NoResize"
   Title="Spielende"
   Topmost="True"
   WindowStartupLocation="CenterScreen"
   Icon="pack://application:,,,/Kingscup;component/Images/Game.png"
   mc:Ignorable="d">
   <Grid >
      <Grid.Background>
         <ImageBrush ImageSource="pack://application:,,,/Kingscup;component/Images/Game.png" />
      </Grid.Background>
      <Grid.RowDefinitions>
         <RowDefinition Height="176"/>
         <RowDefinition/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
         <ColumnDefinition/>
         <ColumnDefinition/>
         <ColumnDefinition/>
      </Grid.ColumnDefinitions>
      <TextBlock
         FontFamily="Arial"  FontSize="14"
         Grid.ColumnSpan="3"
         Foreground="White"
         Name="lblMessage"
         HorizontalAlignment="Center"
         VerticalAlignment="Center"
         Text=""
         TextAlignment="Center" />
      <Button Grid.Row="1" VerticalAlignment="Center"  Width="100" Grid.ColumnSpan="3" FontSize="14" HorizontalAlignment="Center" Content="OK" Click="Button_Click"/>
   </Grid>
</Window>
